<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stepintothepast.StepPrototype"
    tools:ignore="MergeRootFrame" >

    <GridLayout
        android:id="@+id/Grid"
        style="@style/AppBaseTheme"
        android:layout_width="match_parent"
        android:layout_height="327dp"
        android:alignmentMode="alignBounds"
        android:columnCount="2"
        android:columnOrderPreserved="true"
        android:padding="5dp"
        android:rowCount="10"
        android:rowOrderPreserved="true"
        android:useDefaultMargins="true" >

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="138dp"
            android:layout_height="36dp"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="3"
            android:text="# of Human Generations Ago:" />

        <TextView
            android:id="@+id/Year"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:text="'Current' Year:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/steps"
            android:layout_width="84dp"
            android:layout_height="32dp"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="2"
            android:text="0" />

        <TextView
            android:id="@+id/StepsTaken"
            android:layout_width="102dp"
            android:layout_height="36dp"
            android:layout_column="0"
            android:layout_gravity="left|center_vertical"
            android:layout_row="2"
            android:text="Steps taken:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/YearCount"
            android:layout_width="82dp"
            android:layout_height="32dp"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="1"
            android:text="2014"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/GenCount"
            android:layout_width="84dp"
            android:layout_height="32dp"
            android:layout_column="1"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_row="3"
            android:text="0" />

    </GridLayout>

</FrameLayout>

